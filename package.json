{
	"name": "vscode-write",
	"description": "The writer's toolbox.",
	"author": "Sam Rose",
	"license": "MIT",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/samwho/vscode-write"
	},
	"publisher": "samwho",
	"categories": [],
	"engines": {
		"vscode": "^1.23.0"
	},
	"activationEvents": [
		"onLanguage:plaintext",
		"onLanguage:markdown"
	],
	"main": "./client/out/extension",
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "mocha --require ts-node/register {server,client}/src/test/**/*.ts"
	},
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/mocha": "^5.2.6",
		"@types/node": "^8.0.0",
		"chai": "^4.2.0",
		"mocha": "^6.0.2",
		"ts-node": "^8.0.2",
		"tslint": "^5.11.0",
		"typescript": "^3.3.3333"
	},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "vscode-write language server logging level",
			"properties": {
				"write.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"write.readability.threshold": {
					"scope": "window",
					"type": "number",
					"default": 14,
					"description": "Score threshold for the automated readability index in vscode-write, set to 0 to turn it off and see https://en.wikipedia.org/wiki/Automated_readability_index for what it means"
				}
			}
		}
	}
}
